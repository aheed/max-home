---
import Layout from '@layouts/Layout.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import TeamGrid from '@components/sections/TeamGrid.astro';

const seoTitle = "Cast";
const seoDescription = "Cast of characters in the game";

const heroContent = {
    title: "Cast",
    description: "Meet the characters of the game. Each one has a unique story and role to play.",
}

---

